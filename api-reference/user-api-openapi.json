        "summary": "Link external data with internal items",
        "description": "Create a bidirectional link between external data and internal items to maintain context and relationships",
        "tags": [
          "Procore Connect"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "externalItemId",
                  "internalItemId",
                  "linkType"
                ],
                "properties": {
                  "externalItemId": {
                    "type": "string",
                    "description": "ID of the external item",
                    "example": "EXT-ITEM-001"
                  },
                  "internalItemId": {
                    "type": "string",
                    "description": "ID of the internal item",
                    "example": "INT-ITEM-001"
                  },
                  "linkType": {
                    "type": "string",
                    "enum": ["Reference", "Related", "Dependency", "Parent"],
                    "description": "Type of relationship between items",
                    "example": "Reference"
                  },
                  "sourceProjectId": {
                    "type": "string",
                    "description": "ID of the source project for external item",
                    "example": "PROJ-001"
                  },
                  "targetProjectId": {
                    "type": "string",
                    "description": "ID of the target project for internal item",
                    "example": "PROJ-002"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Link created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Link created successfully"
                    },
                    "linkId": {
                      "type": "string",
                      "example": "LINK-1234567890-abc123"
                    },
                    "externalItemId": {
                      "type": "string",
                      "example": "EXT-ITEM-001"
                    },
                    "internalItemId": {
                      "type": "string",
                      "example": "INT-ITEM-001"
                    },
                    "linkType": {
                      "type": "string",
                      "example": "Reference"
                    }

    "/api/procore-connect/copy": {
      "post": {
        "summary": "Create copies of external data",
        "description": "Create a copy of external data within the internal account for local processing and workflow management",
        "tags": [
          "Procore Connect"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "externalItemId",
                  "targetProjectId"
                ],
                "properties": {
                  "externalItemId": {
                    "type": "string",
                    "description": "ID of the external item to copy",
                    "example": "EXT-ITEM-001"
                  },
                  "targetProjectId": {
                    "type": "string",
                    "description": "ID of the target project where copy will be created",
                    "example": "PROJ-002"
                  },
                  "sourceProjectId": {
                    "type": "string",
                    "description": "ID of the source project",
                    "example": "PROJ-001"
                  },
                  "itemType": {
                    "type": "string",
                    "description": "Type of item being copied",
                    "example": "RFI"
                  },
                  "templateId": {
                    "type": "string",
                    "description": "ID of custom template to use for the copy operation",
                    "example": "TEMPLATE-001"
                  },
                  "customFields": {
                    "type": "object",
                    "description": "Custom fields to include in the copied data",
                    "additionalProperties": true,
                    "example": {
                      "customField1": "value1",
                      "customField2": "value2"
                    }
                  },
                  "includeMetadata": {
                    "type": "boolean",

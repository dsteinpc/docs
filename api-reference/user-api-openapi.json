    "/api/procore-connect/share/{shareId}/status": {
      "get": {
        "summary": "Monitor status of external data",
        "description": "Retrieve the current status of shared data, including processing state and any updates",
        "tags": [
          "Procore Connect"
        ],
        "parameters": [
          {
            "name": "shareId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier of the share operation",
            "example": "SHARE-1234567890-abc123"
          }
        ],
        "responses": {
          "200": {
            "description": "Status retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "shareId": {
                      "type": "string",
                      "example": "SHARE-1234567890-abc123"
                    },
                    "status": {
                      "type": "string",
                      "enum": ["Pending", "Processing", "Completed", "Failed"],
                      "example": "Completed"
                    },
                    "lastUpdated": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2025-11-04T17:00:00.000Z"
                    },
                    "progress": {
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 100,
                      "description": "Progress percentage (0-100)",
                      "example": 100
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Share not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Share not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/procore-connect/retain": {
      "post": {
        "summary": "Retain external data",
        "description": "Permanently store external data in the local account for record keeping and future reference",
        "tags": [
          "Procore Connect"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "externalItemId",
                  "sourceProjectId",
                  "targetProjectId"
                ],
                "properties": {
                  "externalItemId": {
                    "type": "string",
                    "description": "ID of the external item to retain",
                    "example": "EXT-ITEM-001"
                  },
                  "sourceProjectId": {
                    "type": "string",
                    "description": "ID of the source project where the item originated",
                    "example": "PROJ-001"
                  },
                  "targetProjectId": {
                    "type": "string",
                    "description": "ID of the target project where data will be retained",
                    "example": "PROJ-002"
                  },
                  "itemType": {
                    "type": "string",
                    "description": "Type of item being retained (e.g., RFI, Drawing, Submittal)",
                    "example": "RFI"
                  },
                  "retentionReason": {
                    "type": "string",
                    "description": "Reason for retaining this data",
                    "example": "Legal record keeping"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "External data retained successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "External data retained successfully"
                    },
                    "retentionId": {
                      "type": "string",
                      "example": "RETAIN-1234567890-abc123"
                    },
                    "retainedAt": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2025-11-04T17:00:00.000Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Missing required fields"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/procore-connect/links": {
